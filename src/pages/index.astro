---
import BaseLayout from '../layouts/Base.astro';
import PostPreview from "@/components/blog/PostPreviewB";
import SocialMediaLinks from "@/components/SocialMediaLinks";
import { getAllPosts, sortMDByDate, sortMDByPinned } from "@/utils";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);
const allPostsByPinned = sortMDByPinned(allPostsByDate);

const services: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Full Stack Web Development",
		desc: "Design and create software and web applications that utilize modern backend and front-end technologies.",
		href: "/services",
	},
	{
		title: "Content Creation Services",
		desc: "Create content that uses storytelling principles to engage users and bring awareness to your brand.",
		href: "/services",
	},
	{
		title: "Brand/Marketing Consulting",
		desc: "Provide consultation services for SEO, email, social media, and content marketing campaigns and make sure they align with objectives and goals of your brand.",
		href: "/services",
	},
	{
		title: "General Business Consulting",
		desc: "Utilize experience in finance, supply chain management, ecommerce, and entrepreneurship to help small businesses make strategic decisions.",
		href: "/services",
	},
];

const projects: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Project 1",
		desc: "The first project.",
		href: "/projects/project-1",
	},
	{
		title: "Project 2",
		desc: "The second project.",
		href: "/projects/project-2",
	},
	{
		title: "Project 3",
		desc: "The third project.",
		href: "/projects/project-3",
	},
	{
		title: "Project 4",
		desc: "The fourth project.",
		href: "/projects/project-4",
	},
]

const tech: Array<{ title: string; desc: string; href: string }> = [
	{
		title: "Astro",
		desc: "Build fast websites, faster.",
		href: "https://astro.build",
	},
	{
		title: "JavaScript",
		desc: "A lightweight, interpreted program that powers 99% of the web by adding client-side interactivity to web sites.",
		href: "https://developer.mozilla.org/en-US/docs/Web/JavaScript",
	},
	{
		title: "Tailwind CSS",
		desc: "Rapidly build modern websites without ever leaving your HTML.",
		href: "https://tailwindcss.com",
	},
	{
		title: "StackBlitz",
		desc: "An online development environment for frontend, Node.js and the JavaScript ecosystem.",
		href: "https://stackblitz.com",
	},
	{
		title: "MDX",
		desc: "Markdown for the component era.",
		href: "https://mdxjs.com/",
	},
	{
		title: "GitHub",
		desc: "The open source platform where developers create, store, manage, and share their code.",
		href: "https://github.com/natemoo-re/astro-icon#readme",
	},
];



---

<BaseLayout title="Home">
	<section>
		<h1 class="title">Andrew Weisbeck - Freelance Full Stack Web Developer</h1>
		<p class="mb-4 sm:mb-8">
			Hey y'all! My name is Andrew and I'm a 32 year old full-stack web developer who lives in the Raleigh-Durham-Chapel Hill area of North Carolina with my fianc√© Lisa. I am currently seeking new career opportunities, hopefully in software development.
		</p>
		<div>
			<span>You can find me on: </span>
			<SocialMediaLinks/>
		</div>
	</section>

	<section class="mt-16">
		<h2 class="title">Services</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				services.map(({ href, title, desc }) => (
					<li>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="cody-link inline-block"
						>
							{title}
						</a>:
						<p class="inline-block sm:mt-2">{desc}</p>
					</li>
				))
			}
		</ul>
	</section>

	<section class="mt-16">
		<h2 class="title">Projects</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				projects.map(({ href, title, desc }) => (
					<li>
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							class="cody-link inline-block"
						>
							{title}
						</a>
						<p class="inline-block sm:mt-2">{desc}</p>
					</li>
				))
			}
		</ul>
	</section>

	<section class="mt-8 sm:mt-16">
		<h2 class="title">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{allPostsByPinned.map(p => <PostPreview post={p}/>)}
		</ul>
	</section>

	<section class="mt-16">
			<h2 class="title">Technologies</h2>
			<ul class="space-y-4 sm:space-y-2">
				{
					tech.map(({ href, title, desc }) => (
						<li>
							<a
								href={href}
								target="_blank"
								rel="noopener noreferrer"
								class="cody-link inline-block"
							>
								{title}
							</a>: 
							<p class="inline-block sm:mt-2">{desc}</p>
						</li>
					))
				}
			</ul>
		</section>
</BaseLayout>
